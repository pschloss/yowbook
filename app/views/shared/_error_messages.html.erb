<% if @shepherd.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-danger">
			The form contains <%= pluralize(@shepherd.errors.count, "error") %>.
		</div>
		<ul>
			<% @shepherd.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>
