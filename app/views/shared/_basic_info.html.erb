<div class="row no-gutters">
	<div class="col-md-4 vcenter">
		<% if animal.picture? %>
			<%= image_tag animal.picture.thumb.url %>
		<% else %>
			<div class="tag_img"><%= animal.eartag %></div>
		<% end %>
	</div><!--
--><div class="col-md-4 vcenter">
		<ul class="description">
			<li><span id="label">Eartag:</span> <span id="eartag"><%= animal.eartag %></span></li>
			<li><span id="label">Sex:</span> <span id="sex"><%= animal.sex.capitalize %></span></li>
			<li><span id="label">Dam:</span> <span id="dam"><%= animal.pedigree[:dam] %></span></li>
			<li><span id="label">Sire:</span> <span id="sire"><%= animal.pedigree[:sire] %></span></li>
			<li><span id="label">Breed:</span> <span id="breed">NA</span></li>
		</ul>
	</div><!--
--><div class="col-md-4 vcenter">
		<ul class="description">
			<li><span id="label">Born:</span> <span id="born"><%= animal.birth_date %> </li>
			<li><span id="label">Raised as:</span> <span id="raised_as"><%= animal.raised_as %></li>
			<li><span id="label">Birth type:</span> <span id="birth_type"><%= animal.birth_type %></li>
			<li><span id="label">Progeny:</span> <span id="progeny"><% if animal.children == nil %>0<%else%><%= animal.children.count %><% end %></li>
			<li><span id="label">Last weight:</span> <span id="last_weight"><%= animal.last_weight %></span></li>
		</ul>
	</div>
</div>
