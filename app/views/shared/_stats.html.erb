<% @shepherd ||= current_shepherd %>
<div class="stats">
	<a href="<%= following_shepherd_path(@shepherd) %>">
		<strong id="following" class="stat">
			<%= @shepherd.following.count %>
		</strong>
		following
	</a>
	<a href="<%= followers_shepherd_path(@shepherd) %>">
		<strong id="followers" class="stat">
			<%= @shepherd.followers.count %>
		</strong>
		followers
	</a>
</div>
